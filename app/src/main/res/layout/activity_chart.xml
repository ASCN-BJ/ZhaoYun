<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="消费占比(图标颜色随机)"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="19sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.bj.zhaoyun.view.chart.PieChart
                android:id="@+id/pc_pie_chat"
                android:layout_width="200dp"
                android:layout_height="200dp" />

            <LinearLayout
                android:id="@+id/ll_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp"
                android:visibility="visible" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="消费占比(可点击,带回调,图标颜色随机)"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="19sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:padding="10dp">

            <com.bj.zhaoyun.view.chart.PieChartTouchView
                android:id="@+id/pct_chart"
                android:layout_width="200dp"
                android:layout_height="200dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.bj.zhaoyun.view.chart.CirclePieChart
                android:id="@+id/cpc_pie"
                android:layout_width="match_parent"
                android:layout_height="400dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
